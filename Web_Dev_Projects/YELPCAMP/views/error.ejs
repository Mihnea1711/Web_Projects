<% layout("layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-2">
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading"><%=statusCode%> - <%=err.message%></h4>
      <!-- if in production, don't show the users the stack trace! -->
      <% if (process.env.NODE_ENV !== "production") { %>
      <p><%=err.stack%></p>
      <% } %>
    </div>
  </div>
</div>
